<h2>Добавление товара</h1>
<%= form_for @item do |f| %>
      <div class="container">
         <div class="row col-lg-12">
            <div class="col-lg-2">
               <%= f.label "Название" %>
            </div>
            <div class="col-lg-3">
               <%= f.text_field :item_name %>
            </div>
         </div>
      </div>

      <div class="container">
         <div class="row col-lg-12">
            <div class="col-lg-2">
               <%= f.label "Характеристика 1" %>
            </div>
            <div class="col-lg-3">
               <%= f.text_field :variable1 %>
            </div>
            <div class="col-lg-2">
               <%= f.label "Значение 1" %>
            </div>
            <div class="col-lg-3">
               <%= f.text_field :value1 %>
            </div>
         </div>
            <div class="row col-lg-12">
               <div class="col-lg-2">
                  <%= f.label "Характеристика 2" %>
               </div>
               <div class="col-lg-3">
                  <%= f.text_field :variable2 %>
               </div>
               <div class="col-lg-2">
                  <%= f.label "Значение 2" %>
               </div>
               <div class="col-lg-3">
                  <%= f.text_field :value2 %>
               </div>
         </div>
      </div>

   <div class="row">
      <%= f.label "Характеристика 3" %><%= f.text_field :variable3 %>
      <%= f.label "Значение 3" %><%= f.text_field :value3 %>
      <%= f.label "Характеристика 4" %><%= f.text_field :variable4 %>
      <%= f.label "Значение 4" %><%= f.text_field :value4 %>
   </div>  
      <%= f.label "Комментарий" %><%= f.text_field :comment %>
      <%= f.label "Цена" %><%= f.text_field :price %>
      <%= f.label :image %> <%= f.file_field :image %>
      <%= f.submit %>
<% end %>
<hr>