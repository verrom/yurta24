<div class="all-banners-width">
	<figure class="green-background">
		<%= form_for @contact_form do |f| %>
	  		<p>
	   		 	<%= f.label :name %><br>
	    		<%= f.text_field :name %>
	  		</p>
	 
	  		<p>
	    		<%= f.label :phone %><br>
	    		<%= f.text_field :phone %>
	  		</p>

	  		<p>
	   		 	<%= f.label :email %><br>
	    		<%= f.text_field :email %>
	  		</p>
	 
	  		<p>
	    		<%= f.label :text %><br>
	    		<%= f.text_field :text %>
	  		</p>
	 
	  		<p>
	    		<%= f.submit %>
	  		</p>
		<% end %>
	</figure>
</div>

