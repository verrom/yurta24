<h1>Editing description</h1>
 
<%= form_for :description, url: description_path(@description), method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :class => "tinymce", :rows => 20, :cols => 100 %>
  </p>
  <%= f.submit "Сохранить" %>
<% end %>
 
<%= link_to 'Назад', manager_path %>
<%= tinymce %>